<p>
  <strong><h2><%= @lecture.course_name %> (<%= @lecture.course_id %>)</h2></strong>
  <strong><h2></h2></strong>
</p>
 
<p>
  <strong><h3><%= @lecture.professor %></h3></strong>
</p><br>

<div class="jumbotron">
  <div class="page-header">
    <h1>Shared Resources <small>info</small></h1>
  </div>
  
  <div class="row">
  <% @lecture.attachments.each_with_index do |attachment, index| %>
    <% if index+1 % 3 > 0 %>
      <div class="col-md-4 thumbnail img-responsive">
        <%= link_to attachment_path(attachment) do %>
            <%= image_tag attachment.link.thumb %>
        <% end %>
      </div>
    <% else %>
      </div>
      <div class="row">
    <% end %>
  <% end %>
  </div>

    <%= form_for([@lecture, @lecture.attachments.build]) do |f| %>
      <%= f.hidden_field :lecture_id, value: @lecture.id %>
      <p>
        <%= f.file_field :link %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
</div>

<!-- Show all the comments associated with the Lecture -->
<h4>Most Recent Comments</h4>
<% @lecture.comments.each do |comment| %>
  <div class="well well-sm">
    <p>
      <strong>Reviewer:</strong>
      <%= comment.reviewer %>
    </p>
   
    <p>
      <strong>Comment:</strong>
      <%= comment.review %>
    </p>
  </div>
<% end %>
<!-- Allow users signed in to add a comment -->
<h2>Add a comment:</h2>
<%= form_for([@lecture, @lecture.comments.build]) do |f| %>
  <p>
    <%= f.label :reviewer %><br>
    <%= f.text_field :reviewer %>
  </p>
  <p>
    <%= f.label :review %><br>
    <%= f.text_area :review %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

