<p>
  <strong><h2><%= @lecture.course_id %></h2></strong>
  <strong><h2><%= @lecture.course_name %></h2></strong>
</p>
 
<p>
  <strong><h3><%= @lecture.professor %></h3></strong>
</p><br>

<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="#">Green Sheet</a></li>
  <li role="presentation"><a href="#">Notes</a></li>
</ul>

<div class="well">...</div>

<!-- Show all the comments associated with the Lecture -->
<h4>Most Recent Comments</h4>
<% @lecture.comments.each do |comment| %>
  <div class="well well-sm">
    <p>
      <strong>Reviewer:</strong>
      <%= comment.reviewer %>
    </p>
   
    <p>
      <strong>Comment:</strong>
      <%= comment.review %>
    </p>
  </div>
<% end %>
<!-- Allow users signed in to add a comment -->
<h2>Add a comment:</h2>
<%= form_for([@lecture, @lecture.comments.build]) do |f| %>
  <p>
    <%= f.label :reviewer %><br>
    <%= f.text_field :reviewer %>
  </p>
  <p>
    <%= f.label :review %><br>
    <%= f.text_area :review %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

