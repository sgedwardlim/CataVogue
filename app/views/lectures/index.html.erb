<div style="margin-top: 50px;" class="container">
  <div style="margin: 0 auto; width:100%; padding-left: 40px; padding-right: 40px;" class="box">
    <table style="margin:0 auto; width:95%; font-family: Georgia; padding-left: 20px; font-size: 20px;">
      <h1 style="margin:0 auto; width:95%; font-family: Georgia; text-align: center; padding-top: 15px; padding-bottom: 15px; font-size: 40px;">ALL LECTURES</h1>
<div style="padding-bottom: 20px;" class="container">
  <row>
    <div class="col-md-3"></div>
    <div class="col-lg-6">
      <div class="input-group">
        <%= form_tag(lectures_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search Course ID or Professor Name", class: "form-control" %>
        <span class="input-group-btn">
            <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
          <% end %>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
    <div class="col-md-3"></div>
  </row></br></br>

  <% if @lectures.blank? %>
    <h4>There are no lectures containing the term <%= params[:search] %>.</h4>
  <% end %>

  <table class="table">

       <tr style="font-size: 25px;">
          <th>Course ID</th>
          <th>Course Name</th>
          <th>Professor Name</th>
          <th></th>
        </tr>

    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.course_id %></td>
        <td><%= lecture.course_name %></td>
        <td><%= lecture.professor %></td>
        <td><%= link_to 'Show', lecture_path(lecture) %></td>
      </tr>
      <% end %>

    </table>

  </div>

<div class="paginate-style">
   <%= will_paginate @lectures, renderer: BootstrapPagination::Rails %>
</div>
</div>
