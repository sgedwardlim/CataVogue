<div class="container">
	<div class="header clearfix">

	<div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

		<nav> 
		  <!-- If user is logged in do not display the login and sign up buttons -->
		  <% if user_signed_in? %>

		  	<ul class="nav nav-pills pull-left">
		    <li><%= link_to 'CATAVOGUE', root_path, :class => "navbar-brand"  %></li>
		    </ul>

		    <ul class="nav nav-pills pull-right">
		    <li><%= link_to 'About', aboutus_url, :class => "navbar-brand"  %></li>
		    <li><%= link_to 'All Lectures', lectures_path, :class => "navbar-brand" %></li>

		  	
		    <!-- dropdown bar after user logs in
		    -->
		    <li style="font-family: Georgia" class="dropdown">
		      <button class="btn btn-primary btn-lg dropdown-toggle" type="button" data-toggle="dropdown"><%= current_user.email %>
		      <span class="caret"></span></button>
		      <ul class="dropdown-menu">
		        <li style="font-family: Georgia; font-size: 20px;"><%= link_to 'Edit profile', edit_user_registration_path %></li>
		        <li style="font-family: Georgia; font-size: 20px;"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
		      </ul>
		    </li>
		    
		    <!-- not logged in
		    -->
			  <% else %>

			 	 <ul class="nav nav-pills pull-left">
		   		 	<li><%= link_to 'CATAVOGUE', root_path, :class => "navbar-brand"  %></li>
		   		 </ul>
			  	
		   		 <ul class="nav nav-pills pull-right nav-font">
		   		 	<li><%= link_to 'About', aboutus_url, :class => "navbar-brand"  %></li>
				    <li><%= link_to 'All Lectures', lectures_path, :class => "navbar-brand" %></li>

				    <li><%= link_to 'Sign Up', new_user_registration_path, :class => "navbar-brand"  %></li>
				    <li><%= link_to 'Log In', new_user_session_path, :class => "navbar-brand" %></li>
			  <% end %>    
		  </ul>
		</nav>
	</div>
</div>